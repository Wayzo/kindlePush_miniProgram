/* bookMall.wxss */
@import "mall/mall-template.wxss";

.container {
  display: flex;
  flex-direction: column;
  padding: 0rpx;
  background-color: #eee;
}

.header-container {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.header-img {
  height: 160rpx;
  width: 100%;
}

.header-title {
  font-size: 40rpx;
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
}
.main-container{
  display: flex;
  flex-direction: row;
  margin: 10rpx auto;
  justify-content: space-around;
}